{
  "name": "timeforge",
  "displayName": "TimeForge",
  "description": "A Minimalistic timer in the status bar that auto tracks your time spent on workspaces",
  "version": "0.0.1",
  "icon": "/assets/whiteWatch.png",
  "publisher": "subbusyntax",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords" : [
    "timer", "simple timer"
  ],
  "bugs": {
    "url": "https://github.com/subucodes/vscode-ext-timeforge/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/subucodes/vscode-ext-timeforge"
  },
  "homepage": "https://github.com/subucodes/vscode-ext-timeforge/blob/main/README.md",
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:timeforge.setTimer",
    "onCommand:timeforge.pauseTimer",
    "onCommand:timeforge.stopTimer",
    "onCommand:timeforge.stats"
  ],
  "contributes": {
    "commands": [
      {
        "command": "timeforge.setTimer",
        "title": "Set Timer"
      },
      {
        "command": "timeforge.pauseTimer",
        "title": "Pause Timer"
      },
      {
        "command": "timeforge.stopTimer",
        "title": "Stop Timer"
      },
      {
        "command": "timeforge.stats",
        "title": "Show Stats"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "extensionKind" : ["ui"]
}
